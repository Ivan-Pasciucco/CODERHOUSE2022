<div class=" row align-items-center justify-content-center">
    <div class="col-sm-6 bg-secondary border border-info rounded shadow p-2 mb-5"> 
        <h2 class="text-center">Chat</h2>
        <form id="formChat">
            <br>
            <input type="email" class="form-control" id="id" placeholder="Email" required>
            <br>
            <input type="text" class="form-control" id="nombre" placeholder="Name" required>
            <br>
            <input type="text" class="form-control" id="apellido" placeholder="Lastname" required>
            <br>
            <input type="number" class="form-control" id="edad" placeholder="Age" required>
            <br>
            <input type="text" class="form-control" id="alias" placeholder="Alias" required>
            <br>
            <input type="url" class="form-control" id="avatar" placeholder="Url Avatar" required>
            <hr>
            <div id="mensajes"></div>
            <br>
            <input type="text" class="form-control" id="texto" placeholder="..." required>
            <br>
            <input type='submit' id="btnEnviar" class="btn btn-sm btn-success" value="Send"> </input>
        </form>
    </div>
</div>