<div class=" row align-items-center justify-content-center" style="margin-top:10%">
  <div class="col-sm-6 bg-primary border border-info rounded shadow p-1 mb-10">
    <h2 class="text-center text-light">Register user</h2>
    <form id="formChat" action="/register" method="POST">
      <br>
      <input type="email" class="form-control bg-light border-primary" name="username" placeholder="Email" required>
      <br>
      <input type="password" class="form-control bg-light border-primary rounded" name="password" placeholder="Password" required>
      <br>
      <input type='submit' class="btn btn-sm btn-secondary" value="Register"> </input>
    </form>
    <hr>
    <a href="/login" class="btn btn-sm btn-success">Login</a>
  </div>
</div>