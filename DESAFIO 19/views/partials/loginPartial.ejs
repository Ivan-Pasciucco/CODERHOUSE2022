<div class=" row align-items-center justify-content-center" style="margin-top:10%">
    <div class="col-sm-6 bg-primary border border-info rounded shadow p-1 mb-10">
        <h2 class="text-center text-light ">Sign in</h2>
        <form id="formChat" action="/login" method="POST">
            <br>
            <input type="email" class="form-control" name="username" placeholder="Email" required>
            <br>
            <input type="password" class="form-control" name="password" placeholder="Password" required>
            <br>
            <input type='submit' class="btn btn-sm btn-success" value="Login"> </input>
        </form>
        <hr>
        <a href="/register" class="btn btn-sm btn-secondary">Sign up</a>
    </div>
</div>