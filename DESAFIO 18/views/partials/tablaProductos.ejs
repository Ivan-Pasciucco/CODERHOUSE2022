<div class="col-md-6 align-items-center justify-content-center" style="margin-top:2%">
    <div class="bg-dark border border-info rounded shadow p-2 mb-6">
        <% if(products.length == 0){ %>
            <h2>Empty</h2>
        <% }else{ %>
            <table class="table table-striped table-dark table-responsive">
                <thead>
                    <tr>
                        <td colspan="6"> <h2 class="text-center text-info">Products</h2> </td>
                    </tr>
                </thead>

                <tr>
                    <td> <b>Photo</b> </td>
                    <td> <b>Code</b> </td>
                    <td> <b>Name</b> </td>
                    <td> <b>Description</b> </td>
                    <td> <b>Price</b> </td>
                    <!-- <td> <b>Accion</b> </td> -->
                </tr>
            <% for (let i = 0; i < products.length; i++) { %>
                <tr>
                    <td> <img width="70" src=<%= products[i].foto %> > </td>
                    <td> <%= products[i].codigo %> </td>
                    <td> <%= products[i].nombre %> </td>
                    <td> <%= products[i].descripcion %> </td>
                    <td> $<%= products[i].precio %> </td>
                    <td> <a href="/carrito/addProd/<%= products[i].id %>" class="btn btn-sm btn-info text-center">Add to cart</a> </td>
                </tr>
            <% }%>
            </table>
        <% }%>
    </div>
</div>